{
  "name": "lobby-frontend",
  "version": "0.1.0",
  "description": "Lobby AI VTuber - Frontend",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "pnpm electron:compile && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "pnpm electron:compile && vite build && electron-builder",
    "electron:start": "pnpm electron:compile && electron ."
  },
  "keywords": [
    "live2d",
    "vtuber",
    "ai"
  ],
  "author": "watari-ai",
  "license": "MIT",
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "^7.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.0",
    "csstype": "^3.2.3",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "3.4.17",
    "typescript": "^5.5.0",
    "vite": "^5.4.21",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.watari.lobby",
    "productName": "Lobby",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
