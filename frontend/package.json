{
  "name": "lobby-frontend",
  "version": "1.0.0",
  "description": "Lobby AI VTuber - Frontend",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "pnpm electron:compile && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "pnpm electron:compile && vite build && electron-builder",
    "electron:start": "pnpm electron:compile && electron ."
  },
  "keywords": [
    "live2d",
    "vtuber",
    "ai"
  ],
  "author": "watari-ai",
  "license": "MIT",
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.8.3",
    "lucide-react": "^0.575.0",
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "^8.16.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.5.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "csstype": "^3.2.3",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "electron-squirrel-startup": "^1.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "4.2.0",
    "typescript": "^5.5.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.watari.lobby",
    "productName": "Lobby",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "watari-ai",
      "repo": "lobby"
    }
  }
}
